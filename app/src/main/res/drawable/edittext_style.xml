<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="0dp" />
            <stroke android:width="1dip" android:color="@color/et_color" />
            <gradient android:angle="-90" android:startColor="@color/et_startcolor" android:endColor="@color/et_endcolor"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="0dp" />
            <stroke android:width="1dip" android:color="@color/et_startcolor" />
            <solid android:color="@color/et_color"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="0dp" />
            <stroke android:width="1dip" android:color="@color/et_color" />
            <gradient android:angle="-90" android:startColor="@color/et_startcolor" android:endColor="@color/et_endcolor" />
        </shape>
    </item>
</selector>